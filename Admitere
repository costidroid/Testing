        // Func탵ia pentru trimitere mesaj
        function sendMessage(message) {
            if (!message.trim()) return;
            
            // Ad캒ug캒m mesajul utilizatorului 칥n chat
            addMessage(message, 'user');
            userInput.value = '';
            userInput.blur();
            
            // Arat캒 indicator de tastare
            const typingIndicator = showTypingIndicator();
            
            // Simul캒m un r캒spuns AI dup캒 o scurt캒 칥nt칙rziere
            setTimeout(() => {
                // Gener캒m r캒spunsul
                const aiResponse = generateResponse(message);
                
                // Elimin캒 indicatorul de tastare
                chatContainer.removeChild(typingIndicator);
                
                // Ad캒ug캒m r캒spunsul AI
                const botMessage = addMessage(aiResponse, 'bot');
                
                // Ad캒ug캒m indicatorul AI
                const indicator = document.createElement('div');
                indicator.className = 'ai-indicator';
                indicator.innerHTML = '<i class="fas fa-microchip ai-icon"></i> Asistent UPB - R캒spuns generat';
                botMessage.appendChild(indicator);
                
            }, 1500); // Simul캒m 칥nt칙rzierea proces캒rii
        }
        
        // Evenimente pentru trimitere mesaj
        sendBtn.addEventListener('click', () => {
            if (userInput.value.trim()) {
                sendMessage(userInput.value);
            }
        });
        
        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && userInput.value.trim()) {
                sendMessage(userInput.value);
            }
        });
        
        // Focus automat pe input
        userInput.focus();
        
        // Mesaj de bun venit la 칥nc캒rcarea paginii
        setTimeout(() => {
            const welcomeMessage = addMessage("Bun venit la asistentul virtual pentru admiterea la UPB! Cum v캒 pot ajuta ast캒zi?", 'bot');
